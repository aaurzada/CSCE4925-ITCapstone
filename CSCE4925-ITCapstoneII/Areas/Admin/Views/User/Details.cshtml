@model SQLSolutions.Areas.Admin.ViewModels.UserDetailsList
@{
    ViewBag.Title = "Details";
    if (Session["username"] == null || Session["isAdmin"] == "false")
    {
        Response.Redirect("~/Home/index");
    }
}

<h2>Details</h2>

<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dd>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayName("Title")
                    </th>
                    <th>
                        @Html.DisplayName("Author")
                    </th>
                    <th>
                        @Html.DisplayName("Course")
                    </th>
                    <th>
                        @Html.DisplayName("Checkout Date")
                    </th>
                    <th>
                        @Html.DisplayName("Due Date")
                    </th>
                </tr>

                @foreach (var item in Model.UserBooks)
                {

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Author)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CourseSection)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CheckoutDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DueDate)
                        </td>
                    </tr>
                }

            </table>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    @Html.ActionLink("Back to List", "Index")
</p>
