@model SQLSolutions.Models.Transaction

@{
  
    ViewBag.Title = "Index";
    if (Session["username"] == null || Session["isAdmin"].Equals(false))
    {
        Response.Redirect("~/Home/index");
    }
}

<h2>Check Out/Check In</h2>

@using (Html.BeginForm())
{ 
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
            <h4>Book</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div id="check-inborder">
            <div class="form-group col-md-12">     
                @Html.LabelFor(model => model.BookAssetNumber, htmlAttributes: new {@class = "control-label col-xs-5 col-md-5"})
                <div>
                    @Html.EditorFor(model => model.BookAssetNumber, new {htmlAttributes = new {@class = "form-control col-xs-6 col-md-6", @id = "theFieldID", @Value = ""}})
                    @Html.ValidationMessageFor(model => model.BookAssetNumber, "", new {@class = "text-danger"})
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-offset-5 col-md-offset-5 col-xs-3 col-md-3">
                    <input type="submit" value="Check" class="btn btn-default" />
                </div>
            </div>
        </div>
        </div>
}