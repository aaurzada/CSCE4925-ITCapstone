                            type="button" aria-expanded="false">
                        Menu
                    </button>*@

                <button type="button" class="navbar-toggle collapsed btn btn-success
                        btn-md navbar-left collapsed" data-toggle="collapse" data-target="#primary-site-menu" aria-expanded="false">

                    Menu
                </button>
                </div>

            <div id="primary-site-menu" class="navbar-collapse collapse" role="navigation" aria-expanded="false" style="height: 1px;">
                <div class="navbar-left">
                    <ul class="menu nav navbar-nav">
                        <li class="leaf" @*"first leaf active"*@>
                            <a class="leaf" href="/">
                                Checkout/Check-in
                            </a>
                        <li>

                        <li class="@SelectedTabClass("Catalog Management")">
                            @Html.ActionLink("Catalog Management", "Index", "Book", new { area = "admin" }, new { })
                        </li>
                        <li class="@SelectedTabClass("User Records")">
                            @Html.ActionLink("User Records", "Index", "User", new { area = "admin" }, new { })
                        </li>
                        <li class="dropdown @SelectedTabClass("Reports")">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Reports <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Book Reports", "IndexBookReport", "Report", new { area = "admin" }, new { })</li>
                                <li>@Html.ActionLink("Transaction Reports", "TransactionReports", "Report", new { area = "admin" }, new { })</li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="navbar-right">

                    <ul class="menu nav navbar-nav secondary">
                        <li class="first leaf">
                            <a title="" href="/Logout">
                                Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

        </div><!-- /.container -->
    </nav>
    <div class="main-container container">
        <div id="site-content-region" class="row">
        <div class="col-sm-12">
            @RenderBody()


            </div>
        </div>
    </div>
    <footer id="main-footer">
