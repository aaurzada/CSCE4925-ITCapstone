@using System.Web.Optimization
@using SQLSolutions.Infrastructure;



@{
    Layout = null;
}


@*Invokes helper class from Infrastructure/SelectedTabAttributes.cs to highlight the currently active tab*@
@helper SelectedTabClass(string tabName)
{
    if (tabName == ViewBag.SelectedTab)
    {
        @: active
    }
}


<!DOCTYPE html>



<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>CSCE Library</title>

    @Styles.Render("~/styles")

</head>
<body>
    <div id="wrapper">
        <header id="heading" class="hidden-print">
            <div id="branding" class="header-main container hidden-xs" role="banner">

                <h1 id="site-name" class="logo col-sm-8">
                    <a id="logo-name-site" title="CSCE Library" href="/">CSCE Department Library</a>
                </h1>
                <div id="UNT" class=" col-sm-4">
                    <a id="unt-logo" class="pull-right" title="UNT | A Green Light to Greatness" href="http://www.unt.edu">
                        <img class="unt-lettermark img-responsive" alt="UNT Logo" src="@Url.Content("~/Content/Images/Untlogo.png")">
                    </a>

                </div>
            </div>
        </header>
       
        <div class="main-container container">
            <div id="site-content-region" class="row">
                <div class="col-sm-12">
                    @RenderBody()



                </div>
            </div>
        </div>
        <footer id="main-footer">
            <div id="footer-content">
                <div class="container">
                    SQL Solutions
                </div>
            </div>
        </footer>
    </div>
</body>
@Scripts.Render("~/scripts")
@RenderSection("Scripts", false)
</html>